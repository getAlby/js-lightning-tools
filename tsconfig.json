{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declarationMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": false,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["examples/*", "scripts/*", "node_modules", "**/*.test.ts"]
}
